const char* ssid = "cam car";
const char* password = "";

  
const int AIN1 = 12;  // 注  -  1
const int AIN2 = 13;  // 注  -  2
const int BIN1 = 14;  // 注 砖 -  1
const int BIN2 = 15; // 注 砖 -  2

// 专转 专专转  (0-255)
int speed = 30;


DNSServer dnsServer;
// 注专 砖 转 爪 拽砖
// 拽: 0-W, 1-A, 2-S, 3-D, 4-E, 5-Space
uint8_t keyStates[6] = {0, 0, 0, 0, 0, 0};

int getKeyIndex(char key) {
  switch (key) {
    case 'w': return 0;
    case 'a': return 1;
    case 's': return 2;
    case 'd': return 3;
    case 'e': return 4;
    case ' ': return 5;
    default: return -1;
  }
}



void handleMovement(uint8_t keyStates[6]) {
  // 砖 驻 4 驻 拽砖 专
  if (keyStates[5] == 1) {
    digitalWrite(4, HIGH);
  } else {
    digitalWrite(4, LOW);
  }

  // 砖 驻 2 驻 拽砖 E
  if (keyStates[4] == 1) {
    digitalWrite(2, HIGH);
  } else {
    digitalWrite(2, LOW);
  }

  // 转注
  bool w = keyStates[0];
  bool a = keyStates[1];
  bool s = keyStates[2];
  bool d = keyStates[3];

  if (!w && !a && !s && !d) {
    //  拽砖 砖专专 -> 注爪专
    stop();
  } else if (w && !a && !s && !d) {
    // 拽 
    forward();
  } else if (s && !a && !d) {
    // 专 
    backward();
  } else if (a && !w) {
    // 驻 砖 )
    left();
  } else if (d && !w) {
    // 驻  ()
    right();
  
  } else if (d && w) {
    //  驻  拽 ()
    ForwardRight();
  
  } else if (a && w) {
    // 驻 砖 拽 ()
    ForwardLeft();
}
}

WebServer server(80);
WebSocketsServer webSocket = WebSocketsServer(81);







